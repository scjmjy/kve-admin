{
    "name": "admin-koa",
    "version": "1.1.0",
    "main": "src/index.ts",
    "type": "module",
    "author": "Ronnie",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf dist",
        "cpy": "cpy 'public/' 'dist/' && cpy . '../../admin-koa/dist/public/' --cwd=../admin-vue/dist/",
        "build": "yarn clean && tsc && tsc-alias && yarn cpy",
        "dev:tn": "cross-env NODE_ENV=development ts-node --esm src/index.ts",
        "dev:tsx": "cross-env NODE_ENV=development tsx watch src/index.ts",
        "dev": "cross-env NODE_ENV=development ts-node-dev -r esm -r tsconfig-paths/register --debug -- src/index.ts",
        "db:dev": "cross-env NODE_ENV=development ts-node-dev --esm -r tsconfig-paths/register scripts/mongodb.ts",
        "db:prd": "cross-env NODE_ENV=production ts-node-dev --esm -r tsconfig-paths/register scripts/mongodb.ts",
        "start": "pm2 start ./scripts/ecosystem.config.cjs --env production",
        "reload": "pm2 reload ./scripts/ecosystem.config.cjs",
        "stop": "pm2 stop ./scripts/ecosystem.config.cjs"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/config": "^3.3.0",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/koa": "^2.13.6",
        "@types/koa-bodyparser": "^4.3.10",
        "@types/koa-hbs": "^1.0.7",
        "@types/koa-session": "^6.4.1",
        "@types/koa-static": "^4.0.2",
        "@types/koa__cors": "^4.0.0",
        "@types/koa__multer": "^2.0.4",
        "@types/koa__router": "^12.0.0",
        "@types/ms": "^0.7.31",
        "@types/node": "^16.11.26",
        "@types/ua-parser-js": "^0.7.36",
        "@types/uuid": "^9.0.1",
        "@types/yargs": "^17.0.24",
        "esm": "^3.2.25",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.6",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^3.12.6",
        "yargs": "^17.7.2"
    },
    "dependencies": {
        "@koa/cors": "^4.0.0",
        "@koa/multer": "^3.0.2",
        "@koa/router": "^12.0.0",
        "admin-common": "^1.1.0",
        "async-validator": "^4.2.5",
        "bcryptjs": "^2.4.3",
        "config": "^3.3.9",
        "echarts-china-cities-js": "^0.1.1",
        "http-status-codes": "^2.2.0",
        "ioredis": "^5.3.2",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^9.0.0",
        "koa": "^2.14.2",
        "koa-bodyparser": "^4.4.0",
        "koa-jwt": "^4.0.4",
        "koa-session": "^6.4.0",
        "koa-static": "^5.0.0",
        "log4js": "^6.9.1",
        "mongoose": "^6.4.0",
        "mongoose-paginate-v2": "^1.7.1",
        "ms": "^2.1.3",
        "multer": "^1.4.4",
        "multer-gridfs-storage": "^5.0.2",
        "rate-limiter-flexible": "^2.4.1",
        "sharp": "^0.32.1",
        "svg-captcha": "^1.4.0",
        "ua-parser-js": "^1.0.35"
    }
}
